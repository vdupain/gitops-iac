machine:
  install:
    disk: ${install_disk}
  kubelet:
    nodeIP:
      validSubnets:
        - 2a01:cb0c:81d1:a8fb::/64
        - fd31:e17c:f07f:1::/64 # primary ULA subnet
        - 192.168.10.0/24

  sysctls:
    net.ipv6.conf.all.forwarding: 1
  network:
    interfaces:
      - deviceSelector:
          busPath: "0*"
        dhcp: true
        dhcpOptions:
          ipv4: false
          ipv6: true
    hostname: ${hostname}
# https://www.talos.dev/v1.7/talos-guides/configuration/time-sync/#additional-configuration
  time:
    servers:
      - /dev/ptp0

